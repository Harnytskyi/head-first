
@{
    ViewBag.Title = "Покупка книги";
}

<div>
    <h3>Форма оформлення покупки</h3>
    <form method="post">
        <input type="hidden" value="@ViewBag.BookId" name="BookId" />
        <table>
            <tr>
                <td><p>Введіть своє ім'я </p></td>
                <td><input type="text" name="Person" /></td>
            </tr>
            <tr>
                <td><p>Введіть адресу</p></td>
                <td><input type="text" name="Adress" /></td>
            </tr>
            <tr><td><input type="submit" value="Відправити"/></td></tr>
        </table>
    </form>
</div>


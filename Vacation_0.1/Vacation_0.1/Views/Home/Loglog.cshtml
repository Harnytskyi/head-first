
@{
    ViewBag.Title = "Loglog";
}

<div class="container">
    <div class="row">

        <div class="col align-self-center">
            <h2 style="color:#fff">Loglog</h2>

            <label class="radiobutcontainer">
                <span style="color:#2cf6b8">Approve</span>
                <input type="radio" name="radio">
                <span class="checkmarkgreen"></span>
            </label>

            <label class="radiobutcontainer">
                <span style="color:#ea6676">Refuse</span>

                <input type="radio" name="radio">
                <span class="checkmarkred"></span>
            </label>
        </div>
    </div>
</div>


<div class="col">

    <span class="badge badge-outline outlinegradient-small ">Name Surname <embed class=" close-icon close-icon:before" data-dismiss="alert" src="~/Content/Icons/cancel_icon.svg" /></span>
</div>
<div class="col">
    <embed class="approvedicon" src="~/Content/Icons/approved_by_icon.svg" align="left" />
    <span class="approvedtext">Approved by <br />Name Surname</span>
    <span class="badge badge-outline outlinegradient-large ">
    </span>
    
</div>


@{
    ViewBag.Title = "RequestVacation";
}

<div class="container">
    <div class="row">
        <div class="col-5">
            <div class="custom-content-form">
                <div class="form-header indentation">
                    My profile
                    <a href="#"><img src="~/Content/Icons/edit_icon_grey.svg" class="edit-link" alt="Edit"></a>
                </div>
                <div class="user-main-info indentation">
                    <div>
                        <div style="float: left;">
                            <img src="~/Content/Icons/user_profile_icon.svg" class="user-photo" />
                        </div>
                        <div class="content-right">
                            <div class="user-surname">
                                Name Surname
                            </div>
                            <div class="user-job-title">
                                Job title
                            </div>
                            <div class="user-status">
                                status
                            </div>
                        </div>
                    </div>
                </div>
                <div class="user-info">
                    <div>
                        <p class="signature">
                            date of birth
                        </p>
                        <p class="profile-content">
                            xx month
                        </p>
                    </div>
                    <div>
                        <p class="signature">
                            personal email
                        </p>
                        <p class="profile-content">
                            example email
                        </p>
                    </div>
                    <div>
                        <p class="signature">
                            phone number
                        </p>
                        <p class="profile-content">
                            +380936846845
                        </p>
                    </div>
                    <div>
                        <p class="signature">
                            skype
                        </p>
                        <p class="profile-content">
                            myskype
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-7">
            <div class="jumbotron jumb-style">
                <h1 class="align-items-center">8</h1>
                <p class="align-text-bottom">days available</p>
                <p><a class="btn btn-primary btn-lg align-content-md-center bg-button-gradient" href="#" role="button">REQUEST VACATION</a></p>
            </div>

            <div class="custom-content-form">
                <div class="form-header indentation">
                    Vacation request
                </div>
                <div class="row" style="margin:0;">
                    <div class="col-md-6 indentation">


                        <div style="clear:both;"></div>
                        <div>
                            <p class="signature">
                                vacation type
                            </p>
                            <div class="dropdown custom-dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Dropdown button
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Another action</a>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                </div>
                            </div>

                            <p class="signature">
                                comment
                            </p>
                            <p><textarea rows="5" cols="45" class="form-control bg-name-field" name="text"></textarea></p>
                            <p align="right"><a class="btn btn-lg bg-button-cancel align-content-md-center " href="#" role="button">CANCEL</a></p>
                        </div>

                    </div>
                    <div class="col-md-6 indentation">
                        <p class="signature">
                            from
                        </p>
                        <input id="datepicker" class="form-control" style="background-color: #2E2E2E;" />

                        <p class="signature">
                            to
                        </p>
                        <input id="datepicker2" class="form-control" style="background-color: #2E2E2E;" />
                        <p class="signature">
                            amount
                        </p>
                        <p><input type="text" class="form-control bg-name-field field-width" placeholder="XX" maxlength="2">days in vacation</p>
                        <p><a class="btn btn-lg align-content-md-center bg-button-gradient" href="#" role="button">SEND REQUEST</a></p>
                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>


